<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >


    <include layout="@layout/layout_main_header" />

    <LinearLayout
        android:id="@+id/form_carclaim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:id="@+id/form_carclaim_select_company"
            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/form_tb_lr_white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical|left"
                android:text="保险公司"
                android:textColor="@color/form_tb_title"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/form_carclaim_txt_company"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:hint="请选择保险公司"
                android:maxLines="1"
                android:textColor="@color/form_tb_content"
                android:textColorHint="@color/form_tb_content_hint"
                android:textSize="@dimen/text_size_12" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:src="@drawable/ic_select_arrow_down_n" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/form_tb_lr_white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical|left"
                android:text="车牌号码"
                android:textColor="@color/form_tb_title"
                android:textSize="@dimen/text_size_12" />

            <EditText
                android:id="@+id/form_carclaim_txt_carplateno"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical|left"
                android:hint="请输入车牌号码"
                android:maxLength="10"
                android:maxLines="1"
                android:textColor="@color/form_tb_content"
                android:textColorHint="@color/form_tb_content_hint"
                android:textSize="@dimen/text_size_12" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/form_tb_lr_white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical|left"
                android:paddingRight="20dp"
                android:text="对接人"
                android:textColor="@color/form_tb_title"
                android:textSize="@dimen/text_size_12" />

            <EditText
                android:id="@+id/form_carclaim_txt_handperson"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical|left"
                android:hint="请输入对接人姓名"
                android:maxLength="20"
                android:maxLines="1"
                android:textColor="@color/form_tb_content"
                android:textColorHint="@color/form_tb_content_hint"
                android:textSize="@dimen/text_size_12" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/form_tb_lr_white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical|left"
                android:text="对接电话"
                android:textColor="@color/form_tb_title"
                android:textSize="@dimen/text_size_12" />

            <EditText
                android:id="@+id/form_carclaim_txt_handpersonphone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical|left"
                android:hint="请输入对接人电话"
                android:inputType="phone"
                android:maxLength="18"
                android:maxLines="1"
                android:textColor="@color/form_tb_content"
                android:textColorHint="@color/form_tb_content_hint"
                android:textSize="@dimen/text_size_12" />

        </LinearLayout>


        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="42dp"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/form_tb_lr_white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical|left"
                android:text="理赔方式"
                android:textColor="@color/form_tb_title"
                android:textSize="@dimen/text_size_12" />

            <CheckBox
                android:id="@+id/form_carclaim_claimtype1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/widget_form_radio_green"
                android:checked="true"
                android:paddingLeft="8dp"
                android:text="维修和定损"
                android:textColor="@color/radio_selector_text_color"
                android:textSize="@dimen/text_size_12" />

            <CheckBox
                android:id="@+id/form_carclaim_claimtype2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:button="@drawable/widget_form_radio_green"
                android:paddingLeft="8dp"
                android:text="只定损"
                android:textColor="@color/radio_selector_text_color"
                android:textSize="@dimen/text_size_12" />

        </LinearLayout>




    </LinearLayout>


    <Button
        android:id="@+id/btn_submit_carclaims"
        android:layout_width="match_parent"
        android:layout_below="@+id/form_carclaimservice"
        android:layout_height="42dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:text="@string/btn_submit_carclaimservice"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/white"
        android:background="@drawable/widget_common_btn"
        />
</LinearLayout>