<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <include layout="@layout/layout_main_header" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/default_bg" />

    <LinearLayout
        android:id="@+id/form_carclaimservice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <LinearLayout
            android:id="@+id/form_carclaim_select_company"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/boder_bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="保险公司"
                android:gravity="center_vertical|left"
                android:textColor="@color/text_333"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/form_carclaim_txt_company"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:hint="选择保险公司"
                android:maxLines="1"
                android:textColor="@color/form_tb_content"
                android:textColorHint="@color/form_tb_content_hint"
                android:textSize="@dimen/text_size_12" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/ic_select_arrow_down_n" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/boder_bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:text="车牌号码"
                android:textColor="@color/text_333"
                android:textSize="@dimen/text_size_12" />

            <EditText
                android:id="@+id/form_carclaim_txt_carplateno"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical|left"
                android:hint="车牌号码"
                android:maxLength="10"
                android:maxLines="1"
                android:textColor="@color/form_tb_content"
                android:textColorHint="@color/form_tb_content_hint"
                android:textSize="@dimen/text_size_12" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/boder_bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal"
           >

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:text="对接人"
                android:textColor="@color/text_333"
                android:textSize="@dimen/text_size_12" />

            <EditText
                android:id="@+id/form_carclaim_txt_handperson"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical|left"
                android:hint="姓名"
                android:maxLength="20"
                android:maxLines="1"
                android:textColor="@color/form_tb_content"
                android:textColorHint="@color/form_tb_content_hint"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/boder_bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:text="对接电话"
                android:textColor="@color/text_333"
                android:textSize="@dimen/text_size_12" />

            <EditText
                android:id="@+id/form_carclaim_txt_handpersonphone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical|left"
                android:hint="手机号码"
                android:inputType="phone"
                android:maxLength="18"
                android:maxLines="1"
                android:textColor="@color/form_tb_content"
                android:textColorHint="@color/form_tb_content_hint"
                android:textSize="@dimen/text_size_12" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:text="理赔方式"
                android:textColor="@color/text_333"
                android:textSize="@dimen/text_size_12" />


            <CheckBox
                android:id="@+id/form_carclaim_claimtype1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/widget_form_radio_green"
                android:checked="true"
                android:paddingLeft="8dp"
                android:text="维修和定损"
                android:textColor="@color/radio_selector_text_color"
                android:textSize="@dimen/text_size_12" />

            <CheckBox
                android:id="@+id/form_carclaim_claimtype2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:button="@drawable/widget_form_radio_green"
                android:paddingLeft="8dp"
                android:text="只定损"
                android:textColor="@color/radio_selector_text_color"
                android:textSize="@dimen/text_size_12" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit_carclaims"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/form_carclaimservice"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/widget_common_btn"
        android:text="@string/btn_submit_carclaimservice"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14" />
</LinearLayout>