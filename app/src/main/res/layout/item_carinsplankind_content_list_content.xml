<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:slideswitch="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    >


    <TextView
        android:id="@+id/item_carinsplankind_txt_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="id"
        android:textColor="@color/item_carinsplankind_selector_text_color"
        android:textSize="12sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/item_carinsplankind_txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="left"
        android:minWidth="120dp"
        android:text="机动车损失保险"
        android:textColor="@color/item_carinsplankind_selector_text_color"
        android:textSize="12sp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/item_carinsplankind_txt_input"
                android:layout_width="56dp"
                android:layout_height="32dp"
                android:gravity="center_vertical|left"
                android:background="@drawable/item_carinsplankind_edit_detail_bg"
                android:textColor="@color/item_carinsplankind_selector_text_color"
                android:textSize="11sp"
                android:singleLine="true"
                android:lines="1"
                android:text=""

                />

            <TextView
                android:id="@+id/item_carinsplankind_txt_inputunit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/item_carinsplankind_selector_text_color"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_carinsplankind_txt_details"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/item_carinsplankind_edit_detail_bg"
                android:gravity="center"
                android:hint="投保明细"
                android:textColor="@color/item_carinsplankind_selector_text_color"
                android:textSize="11sp" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/item_carinsplankind_cb_canWaiverDeductible"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="24dp"
            android:button="@drawable/widget_fang_checkbox_green"
            android:checked="true"
            android:gravity="center"
            android:paddingLeft="8px"
            android:text="不计免赔"
            android:textColor="@color/item_carinsplankind_selector_text_color"
            android:textSize="12sp"
            android:layout_weight="1"

            />
    </LinearLayout>

    <com.uplink.carins.ui.SlideSwitch
        android:id="@+id/item_carinsplankind_ch_isCheck"
        android:layout_width="48dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        slideswitch:isOpen="true"
        slideswitch:shape="circle"
        slideswitch:themeColor="@color/item_carinsplankind_text_checked_kuang_green"
        slideswitch:themeColorFalse="@color/item_carinsplankind_text_checked_false" />


</LinearLayout>