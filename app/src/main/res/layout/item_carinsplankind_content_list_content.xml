<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:slideswitch="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_carinskind"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="5dp"
    android:paddingTop="5dp">


    <TextView
        android:id="@+id/item_carinskind_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id"
        android:textSize="12sp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/item_carinskind_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="left"
        android:minWidth="130dp"
        android:maxWidth="130dp"
        android:text="机动车损失保险机动车损失保险机动车损失保险"
        android:textColor="@color/item_carinsplankind_selector_text_color"
        android:textSize="12sp"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="50"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/item_carinskind_input"
                android:layout_width="56dp"
                android:layout_height="32dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/item_carinsplankind_edit_detail_bg"
                android:gravity="center_vertical|left"
                android:lines="1"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/item_carinsplankind_selector_text_color"
                android:textSize="11sp"

                />

            <TextView
                android:id="@+id/item_carinskind_inputunit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="2dp"
                android:layout_marginStart="2dp"
                android:gravity="center"
                android:textColor="@color/item_carinsplankind_selector_text_color"
                android:text="元"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_carinskind_details"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/item_carinsplankind_edit_detail_bg"
                android:gravity="center"
                android:hint="投保明细"
                android:textColor="@color/item_carinsplankind_selector_text_color"
                android:textSize="11sp"
                android:visibility="gone"
                />

        </LinearLayout>

        <CheckBox
            android:id="@+id/item_carinskind_canWaiverDeductible"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:button="@drawable/widget_fang_checkbox_green"
            android:checked="true"
            android:gravity="center"
            android:text="不计免赔"
            android:textColor="@color/item_carinsplankind_selector_text_color"
            android:textSize="12sp"

            />
    </LinearLayout>

    <com.uplink.carins.ui.SlideSwitch
        android:id="@+id/item_carinskind_isCheck"
        android:layout_width="48dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        slideswitch:isOpen="true"
        slideswitch:shape="circle"
        slideswitch:themeColor="@color/item_carinsplankind_text_checked_kuang_green"
        slideswitch:themeColorFalse="@color/item_carinsplankind_text_checked_false" />


</LinearLayout>