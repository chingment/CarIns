<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <com.uplink.carins.ui.my.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:fadingEdge="none"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/home_banner"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@color/white">

                <com.uplink.carins.ui.loopviewpager.AutoLoopViewPager
                    android:id="@+id/home_banner_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <com.uplink.carins.ui.viewpagerindicator.CirclePageIndicator
                    android:id="@+id/home_banner_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="5dp"
                    android:padding="5dp" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp">
                <TextView
                    android:id="@+id/txt_servicetelphone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="8dp"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/text_size_12"
                    android:text="服务热线："
                    />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/default_bg" />

            <RelativeLayout
                android:id="@+id/layout_fuwu_title_row3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:text="好易联服务"
                    android:textColor="@color/home_gridview_ninegrid_toptitle"
                    android:textSize="@dimen/text_size_12"
                    />

                <View
                    android:layout_width="48dp"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/text2"
                    android:background="@color/home_gridview_ninegrid_topline" />

                <View
                    android:layout_width="48dp"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/text2"
                    android:background="@color/home_gridview_ninegrid_topline" />
            </RelativeLayout>

            <com.uplink.carins.ui.my.MyGridView
                android:id="@+id/gridview_ninegrid_haoyilian"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:columnWidth="90dp"
                android:gravity="center"
                android:horizontalSpacing="10dp"
                android:numColumns="auto_fit"
                android:stretchMode="columnWidth"
                android:verticalSpacing="10dp" />

            <RelativeLayout
                android:id="@+id/gridview_ninegrid_thirdpartyapp_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/text21"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:text="第三方服务"
                    android:textColor="@color/home_gridview_ninegrid_toptitle"
                    android:textSize="@dimen/text_size_12"
                    />

                <View
                    android:layout_width="48dp"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/text21"
                    android:background="@color/home_gridview_ninegrid_topline" />

                <View
                    android:layout_width="48dp"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/text21"
                    android:background="@color/home_gridview_ninegrid_topline" />
            </RelativeLayout>

            <com.uplink.carins.ui.my.MyGridView
                android:id="@+id/gridview_ninegrid_thirdpartyapp"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:columnWidth="90dp"
                android:gravity="center"
                android:horizontalSpacing="10dp"
                android:numColumns="auto_fit"
                android:stretchMode="columnWidth"
                android:verticalSpacing="10dp" />

        </LinearLayout>

    </com.uplink.carins.ui.my.MyScrollView>
</LinearLayout>