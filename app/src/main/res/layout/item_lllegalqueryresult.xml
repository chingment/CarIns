<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    xmlns:slideswitch="http://schemas.android.com/apk/res-auto"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boder_bottom"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_lllegal_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:paddingBottom="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="6dp"
            android:text="广东省广州市"
            android:textSize="@dimen/text_size_14" />

        <CheckBox
            android:id="@+id/item_lllegal_candealt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:button="@drawable/widget_form_radio_green"
            android:checked="true"
            android:layout_marginTop="5dp"
            android:paddingLeft="8dp"
            android:visibility="gone"
            android:textColor="@color/radio_selector_text_color"
            android:textSize="@dimen/text_size_12" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_lllegal_address"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="元岗横路——元岗横路段路段"
            android:textColor="@color/text_333"
            android:textSize="@dimen/text_size_13"
            android:paddingBottom="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="6dp"
            android:layout_weight="1"
            />

        <TextView
            android:id="@+id/item_lllegal_status"
            android:width="80dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right"
            android:text="待处理"
            android:textColor="@color/green"
            android:textSize="@dimen/text_size_13"
            android:paddingBottom="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="6dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_lllegal_desc"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="机动车违反禁令标志指示的"
            android:textColor="@color/text_333"
            android:textSize="@dimen/text_size_11"
            android:paddingBottom="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="6dp"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/item_lllegal_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="2017-07-11 13：33：00"
            android:textColor="@color/text_333"
            android:textSize="@dimen/text_size_11"
            android:paddingBottom="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="6dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:text="扣 分："
            android:textColor="@color/text_333"
            android:textSize="@dimen/text_size_11"
            android:paddingBottom="6dp"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:width="55dp"
            />
        <TextView
            android:id="@+id/item_lllegal_point"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left"
            android:text="0"
            android:width="60dp"
            android:textColor="@color/text_333"
            android:textSize="@dimen/text_size_11"
            android:paddingBottom="6dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:textStyle="bold"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:text="罚款："
            android:width="60dp"
            android:textColor="@color/text_333"
            android:textSize="@dimen/text_size_11"
            android:paddingBottom="6dp"
            android:paddingLeft="10dp"
            android:paddingTop="6dp" />
        <TextView
            android:id="@+id/item_lllegal_fine"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left"
            android:text="0"
            android:width="60dp"
            android:textColor="@color/text_333"
            android:textSize="@dimen/text_size_11"
            android:paddingBottom="6dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/title_lllegal_servicefee"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:width="60dp"
            android:text="手续费："
            android:textColor="@color/text_333"
            android:textSize="@dimen/text_size_12" />
        <TextView
            android:id="@+id/item_lllegal_servicefee"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left"
            android:text="0"
            android:width="60dp"
            android:textColor="@color/text_333"
            android:textSize="@dimen/text_size_11"
            android:paddingBottom="6dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:textStyle="bold"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:width="55dp"
            android:gravity="center_vertical|right"
            android:text="滞纳金："
            android:textColor="@color/text_333"
            android:textSize="@dimen/text_size_12" />

        <TextView
            android:id="@+id/item_lllegal_late_fees"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:paddingBottom="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="6dp"
            android:text="0"
            android:width="60dp"
            android:textColor="@color/text_333"
            android:textSize="@dimen/text_size_11"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title_lllegal_urgent"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:width="60dp"
            android:gravity="center_vertical|right"
            android:paddingBottom="6dp"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:text="不加急："
            android:textColor="@color/text_333"
            android:textSize="@dimen/text_size_11" />


        <com.uplink.carins.ui.SlideSwitch
            android:id="@+id/item_lllegal_urgent"
            android:layout_width="38dp"
            android:layout_height="16dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="22dp"
            android:gravity="center"
            slideswitch:isOpen="false"
            slideswitch:shape="circle"
            slideswitch:themeColor="@color/item_carinsplankind_text_checked_kuang_green"
            slideswitch:themeColorFalse="@color/item_carinsplankind_text_checked_false" />

        <TextView
            android:id="@+id/title_lllegal_urgentfee"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:width="60dp"
            android:text="加急费："
            android:textColor="@color/text_333"
            android:textSize="@dimen/text_size_12"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/item_lllegal_urgentfee"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left"
            android:text="0"
            android:width="60dp"
            android:textColor="@color/text_333"
            android:textSize="@dimen/text_size_11"
            android:paddingBottom="6dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="6dp"
            android:textStyle="bold"
            android:visibility="gone"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text="办理说明："
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_11"
            android:paddingBottom="6dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="6dp" />
        <TextView
            android:id="@+id/item_lllegal_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|left"
            android:text=""
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_12" />
    </LinearLayout>
</LinearLayout>