<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >


    <include layout="@layout/layout_main_header" />


    <TextView
        android:id="@+id/form_carinsurecompany_choosetips"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@+id/layout_header"
        android:background="@color/default_bg"
        android:gravity="center"
        android:text="最多只能选3个保险公司"
        android:textSize="11sp" />


    <ListView
        android:id="@+id/list_carinscompany"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btn_submit_carinsurecompany"
        android:layout_below="@+id/form_carinsurecompany_choosetips"
        android:divider="@color/dialog_chooselist_dividerline"
        android:dividerHeight="1px"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scrollbars="none"

        />




    <Button
        android:id="@+id/btn_submit_carinsurecompany"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:text="@string/btn_next"
        android:textSize="18.0sp"
        android:textColor="@color/white"
        android:background="@drawable/widget_common_btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        />



</RelativeLayout>