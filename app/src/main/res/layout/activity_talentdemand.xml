<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >


    <include layout="@layout/layout_main_header" />

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/default_bg" />

    <LinearLayout
        android:id="@+id/form_talentdemand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <LinearLayout
            android:id="@+id/layout_talentdemand_sel_workjob"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/boder_bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="工种"
                android:gravity="center_vertical|left"
                android:textColor="@color/text_333"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/form_talentdemand_txt_workjob"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:hint="选择"
                android:maxLines="1"
                android:textColor="@color/text"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/text_size_12" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/ic_select_arrow_down_n" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/boder_bottom"
            >

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:text="人数"
                android:textColor="@color/text_333"
                android:textSize="@dimen/text_size_12" />

            <EditText
                android:id="@+id/form_talentdemand_txt_quantity"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical|left"
                android:hint="数量"
                android:inputType="number"
                android:maxLength="2"
                android:maxLines="1"
                android:textColor="@color/text"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/text_size_12" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/boder_bottom"
            >

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:text="开始日期"
                android:textColor="@color/text_333"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/form_talentdemand_txt_usestarttime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical|left"
                android:hint="日期"
                android:maxLines="1"
                android:textColor="@color/text"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/text_size_12" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/boder_bottom"
            >

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:text="结束日期"
                android:textColor="@color/text_333"
                android:textSize="@dimen/text_size_12" />


            <TextView
                android:id="@+id/form_talentdemand_txt_useendtime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical|left"
                android:hint="日期"
                android:maxLines="1"
                android:textColor="@color/text"
                android:textColorHint="@color/text_hint"
                android:textSize="@dimen/text_size_12" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:background="@drawable/boder_bottom"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:text=""
                android:textColor="@color/text_333"
                android:textSize="@dimen/text_size_12" />


            <CheckBox
                android:id="@+id/form_talentdemand_isagreeservice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/widget_form_radio_green"
                android:paddingLeft="8dp"
                android:text="我已阅读并接受"
                android:textColor="@color/radio_selector_text_color"
                android:textSize="@dimen/text_size_12" />

            <TextView
                android:id="@+id/btn_serviceagreement"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:text="服务协议"
                android:textColor="@color/colorPrimary"
                android:maxLength="10"
                android:maxLines="1"
                android:textSize="@dimen/text_size_12" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btn_submit_talentdemand"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@+id/form_talentdemand"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/widget_common_btn"
        android:text="@string/btn_submit_carclaimservice"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_14" />



</LinearLayout>