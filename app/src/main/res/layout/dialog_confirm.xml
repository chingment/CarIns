<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dialog_bg">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_horizontal|center"
            android:text="温馨提示"
            android:textColor="@color/dialog_title"
            android:textSize="@dimen/text_size_16" />
        <TextView
            android:id="@+id/dialog_confirm_tips"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:gravity="center_horizontal|center"
            android:text=""
            android:textColor="@color/dialog_tips"
            android:textSize="@dimen/text_size_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dialog_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/dialog_confirm_btn_sure"
                android:layout_width="308dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:layout_marginBottom="1dp"
                android:layout_marginRight="0dp"
                android:background="@drawable/dialog_confirm_leftbtn"
                android:text="确认"
                android:textColor="@color/dialog_confirm_btn_sure"
                android:textSize="@dimen/text_size_16" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/dialog_line" />


            <Button
                android:id="@+id/dialog_confirm_btn_cancle"
                android:layout_weight="1"
                android:layout_width="308dp"
                android:layout_height="36dp"
                android:layout_marginBottom="1dp"
                android:layout_marginLeft="0dp"
                android:background="@drawable/dialog_confirm_rightbtn"
                android:text="取消"
                android:textColor="@color/dialog_confirm_btn_cancle"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>